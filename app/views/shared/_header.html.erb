<header>
  <div id="top-header">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="home-account">
            <li><%= link_to( "Home", page_index_path)%></li>
            <li><%= link_to( "Login", page_login_path)%></li>
          </div>
        </div>
        <div class="col-md-6">
          <div class="cart-info">
            <i class="fa fa-shopping-cart"></i>
            (<a href="#">5 items</a>) in your cart (<a href="#">$45.80</a>)
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="main-header">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="logo">
            <a href="#">
              <%= image_tag("logo.png", title:"Grill Template", alt:"Grill Website Template") %>
            </a>
          </div>
        </div>
        <div class="col-md-6">
          <%= render 'shared/main_menu' %>
        </div>
        <div class="col-md-3">
          <div class="search-box">
            <form name="search_form" method="get" class="search_form">
              <input id="search" type="text" />
              <input type="submit" id="search-button" />
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>